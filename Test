length_hard = int(input("Please enter your length at state 'hard' "))


def measure(length_hard):
  if length_hard <= 7:
    print("Micro")
  elif length_hard > 7 and length_hard <= 14:
    print("Average")
  elif length_hard > 14 and length_hard <= 17:
    print("Nice dude")
  elif length_hard > 17:
    print("Monster!")
  else:
    print("Please enter a valid number")
    

measure(length_hard)
